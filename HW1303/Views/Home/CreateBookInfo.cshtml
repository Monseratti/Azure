@model HW1303.Models.BookInfo

@{
    ViewData["Title"] = "CreateBookInfo";
}

<h1>CreateBookInfo</h1>

<h4>BookInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBookInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Book_title" class="control-label"></label>
                <input asp-for="Book_title" class="form-control" />
                <span asp-validation-for="Book_title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Authors" class="control-label"></label>
                <input asp-for="Authors" class="form-control" />
                <span asp-validation-for="Authors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publishing_name" class="control-label"></label>
                <input asp-for="Publishing_name" class="form-control" />
                <span asp-validation-for="Publishing_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publishing_address_id" class="control-label"></label>
                <select asp-for="Publishing_address_id" class="form-control">
                    @foreach (var item in ViewBag.Addresses)
                    {
                        <option value="@item.Id">@item.Country, @item.City, @item.Street, @item.Building_no</option>
                    }
                </select>
                <span asp-validation-for="Publishing_address_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="publishing_date" class="control-label"></label>
                <input asp-for="publishing_date" class="form-control" />
                <span asp-validation-for="publishing_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
